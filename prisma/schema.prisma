generator client {
  provider = "prisma-client-js"
  // output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  STUDENT
  OWNER
  ADMIN
}

enum IdProofType {
  AADHAAR
  PAN
  VOTER_ID
}

model User {
  id           String @id @default(cuid())
  name         String
  email        String @unique
  phone        String
  passwordHash String
  role         Role   @default(STUDENT)

  profileImageUrl String?
  idProofUrl      String?
  idProofType     IdProofType?
  isVerified      Boolean      @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  properties Property[]

  @@map("users")
}

model College {
  id        String   @id @default(cuid())
  name      String
  city      String
  state     String
  createdAt DateTime @default(now())

  properties Property[]

  @@unique([name, city])
  @@map("colleges")
}

enum PropertyType {
  PG
  FLAT
}

enum GenderType {
  BOYS
  GIRLS
  UNISEX
}

enum OccupancyType {
  SINGLE
  DOUBLE
  TRIPLE
}

enum RentType {
  PER_BED
  PER_ROOM
}

model Property {
  id          String   @id @default(cuid())
  title       String
  description String?
  rent        Int
  rentType    RentType

  address String
  city    String
  state   String
  zipcode String

  latitude  Float?
  longitude Float?

  type        PropertyType
  gender      GenderType
  occupancy   OccupancyType
  isFurnished Boolean       @default(false)
  isAvailable Boolean       @default(true)
  createdAt   DateTime      @default(now())

  ownerId   String
  collegeId String

  owner   User    @relation(fields: [ownerId], references: [id])
  college College @relation(fields: [collegeId], references: [id])

  amenities PropertyAmenity[]
  images    PropertyImage[]

  @@map("properties")
}

model Amenity {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())

  properties PropertyAmenity[]

  @@map("amenities")
}

model PropertyAmenity {
  propertyId String
  amenityId  String

  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  amenity  Amenity  @relation(fields: [amenityId], references: [id], onDelete: Cascade)

  @@id([propertyId, amenityId])
  @@map("property_amenities")
}

model PropertyImage {
  id         String   @id @default(cuid())
  url        String
  propertyId String
  createdAt  DateTime @default(now())

  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@map("property_images")
}
